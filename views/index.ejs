


<section class="mt-5">
    <div class="container">
        <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#CreateModal">Create New Student</a>
        <br />
        <br />
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">
                    <h2>All Student</h2>
                    <hr />
                    <table class="table table-striped student-table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Location</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody >
                            <% studentData.forEach((data,index) => { %>
                                <tr class="align-middle">
                                    <th scope="row"><%= index+1 %></th>
                                    <td><%= data.name %> </td>
                                    <td><%= data.email %> </td>
                                    <td><%= data.phone %> </td>
                                    <td><%= data.gender %> </td>
                                    <td><%= data.location %> </td>
                                    <td>
                                       
                                         
                                        <% if (data.photo == "") { %>
                               
                                            <img src="/gallary/avater/avatar.png " alt="<%= data.name %> ">
            
                                            <% } else { %>
                                             
                                              <img src="/gallary/<%= data.photo %> " alt="<%= data.name %> ">
            
                                          <% } %></td>
                                    <td>
                                        <a class="btn btn-sm btn-info" href="/view/<%= data.id %>"><i class="fa-solid fa-eye"></i></a>
                                        <a class="btn btn-sm btn-warning"  href="/edit/<%= data.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a class="btn btn-sm btn-danger" href="/delete/<%= data.id %>"><i class="fa-solid fa-trash"></i></a>
                                        
                                    </td>
                                </tr>
                            <% }) %>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="CreateModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/" method="post" enctype="multipart/form-data">
              <div my-3>
                <label for="name" class="form-label">Name</label>
                <input type="text" required name="name" class="form-control" id="name">
              </div>
              <div my-3>
                <label for="email" class="form-label">Email</label>
                <input type="text" required name="email" class="form-control" id="email">
              </div>
              <div my-3>
                <label for="phone" class="form-label">Phone</label>
                <input type="text" name="phone" class="form-control" id="phone">
              </div>
              <div my-3>
                <label for="gender" class="form-label">Gender</label>
                <select name="gender" id="gender" class="form-control">
                    <option value="">-Select-</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
              </div>
              <div my-3>
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" class="form-control" id="location">
              </div>
              <div my-3>
                <label for="photo" class="form-label">Photo</label>
                <input type="file" required name="photo" class="form-control" id="photo">
              </div>
            
           
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </div>
        </div>
    </div>
</div>

